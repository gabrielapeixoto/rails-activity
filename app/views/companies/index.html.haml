%table
  %thead
    %tr
      %th Id
      %th Empresa
  %tbody
    - @companies.each do |company|
      %tr
        %td= company.id
        %td= company.name
        %td= link_to "Visualizar", company_path(company)
        %td= link_to "Editar", edit_company_path(company)
        %td=link_to "Excluir", company_path(company), method: :delete

